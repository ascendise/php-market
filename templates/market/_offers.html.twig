<div id='offers' hx-get='/market/_offers' hx-trigger='offers-update from:#buy-offer'>
    <h1>Market</h1>
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td>{{ offer.product.name }}</td>
                <td>{{ offer.quantity }}</td>
                <td>{{ offer.totalPrice }}</td>
                <td>
                    <form id='buy-offer'
                            hx-post='/market/_buy/{{ offer.id }}'
                            hx-swap='outerHtml'
                            hx-target='#trader'>
                        <button>Buy</button>
                        <input type="hidden" name="_token" data-controller="csrf-protection" value="{{ csrf_token('buy') }}" />
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
